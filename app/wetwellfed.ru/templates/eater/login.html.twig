{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}

    <style type="text/css">
        .panel-helper {
            display: inline-block;
            border: 1px dashed #8da1aa;
            border-radius: 10px;
            margin-top: 15px;
            padding: 8px 12px;
            background-color: #e6f4fa;
        }
        .panel-helper label {
            color: #5c6568;
        }
    </style>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password"/>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button type="submit">login</button>
    </form>
    Don't have an account?
    <a href="{{ path('app_register') }}">Sign up!</a>
    <br>
    <p class="panel-helper">
        Test user:<br>
        Email: <label>test@gmail.com</label><br>
        Password: <label>qwerty</label>
    </p>
{% endblock %}